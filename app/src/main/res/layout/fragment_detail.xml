<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imgMoviePoster"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="H,2:1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtMovieTitle"
            style="@style/Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            android:paddingStart="@dimen/space_4"
            android:paddingEnd="@dimen/space_4"
            app:layout_constraintTop_toBottomOf="@id/imgMoviePoster"
            tools:text="نمونه خبر متنی: تیتر خبر" />

        <TextView
            android:id="@+id/txtMovieOverview"
            style="@style/Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_6"
            android:paddingStart="@dimen/space_4"
            android:paddingEnd="@dimen/space_4"
            app:layout_constraintTop_toBottomOf="@id/txtMovieTitle"
            tools:text="خبرگزاری تسنیم" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
